<div class="col-md-10 col-xxl-8">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="h3"><%= class_name.pluralize %></h1>

    <%%= link_to new_<%= name %>_path, class: 'btn btn-primary btn-sm' do %>
      <i class="fas fa-plus"></i>
      Nova <%= name %>
    <%% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <%- attributes.each do |attr| -%>
          <th><%= attr.name.humanize %></th>
          <%- end -%>
          <th class="actions-column"></th>
        </tr>
      </thead>

      <tbody>
        <%% @<%= plural_name %>.each do |<%= name %>| %>
          <tr>
            <%- attributes.each do |attr| -%>
            <td><%%= <%= name %>.<%= attr.name %> %></td>
            <%- end -%>

            <td class="text-right">
              <div class="btn-group btn-group-sm">
                <%%= link_to <%= name %>, class: 'btn btn-info' do %>
                  <i class="fas fa-eye"></i>
                  Exibir
                <%% end %>

                <%%= link_to edit_<%= name %>_path(<%= name %>), class: 'btn btn-warning' do %>
                  <i class="fas fa-edit"></i>
                  Editar
                <%% end %>

                <%%= link_to <%= name %>, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger' do %>
                  <i class="fas fa-trash-alt"></i>
                  Excluir
                <%% end %>
              </div>
            </td>
          </tr>
        <%% end %>
      </tbody>
    </table>
  </div>
</div>
